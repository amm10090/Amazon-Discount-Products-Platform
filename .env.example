# Amazon PA-API 凭证
AMAZON_ACCESS_KEY=your_access_key_here
AMAZON_SECRET_KEY=your_secret_key_here
AMAZON_PARTNER_TAG=your_partner_tag_here

# 数据库配置
SCHEDULER_DB_PATH=data/db/scheduler.db  # 调度器数据库路径
PRODUCTS_DB_PATH=data/db/amazon_products.db  # 商品数据库路径
SCHEDULER_TIMEZONE=Asia/Shanghai        # 调度器时区

# 数据库连接池配置
DB_POOL_SIZE=5                         # 连接池大小
DB_MAX_OVERFLOW=10                     # 最大溢出连接数
DB_POOL_TIMEOUT=30                     # 连接池超时时间（秒）
DB_POOL_RECYCLE=3600                  # 连接回收时间（秒）

# 开发环境配置
CONFIG_PATH=config/development.yaml     # 配置文件路径
ENVIRONMENT=development                 # 环境类型：development/production

# API服务配置
API_HOST=localhost
API_PORT=8000
API_WORKERS=1
API_LOG_LEVEL=debug

# 前端服务配置
FRONTEND_HOST=localhost
FRONTEND_PORT=8501

# 日志配置
LOG_LEVEL=DEBUG                        # 日志级别：DEBUG/INFO/WARNING/ERROR
LOG_MAX_SIZE=10485760                  # 日志文件最大大小（字节）
LOG_BACKUP_COUNT=5                     # 保留的日志文件数量

# 爬虫配置
CRAWLER_HEADLESS=true                  # 是否使用无头模式
CRAWLER_TIMEOUT=30                     # 爬虫超时时间（秒）
CRAWLER_BATCH_SIZE=10                  # 批量处理大小

# 缓存配置
CACHE_EXPIRE_DAYS=7                    # 缓存过期天数
CACHE_DIR=data/cache                   # 缓存目录

# 输出配置
OUTPUT_DIR=data/output                 # 输出目录
DEFAULT_OUTPUT_FORMAT=json             # 默认输出格式：json/csv/excel

# 爬虫输出格式
CRAWLER_OUTPUT_FORMAT="json"

# 输出目录配置
CRAWLER_RESULTS_DIR="crawler_results"
PRODUCT_RESULTS_DIR="product_results"

# 可选：代理设置
# HTTP_PROXY="http://your-proxy:port"
# HTTPS_PROXY="http://your-proxy:port"

# 可选：API限流设置
# API_RATE_LIMIT=1  # 每秒请求数
# API_THROTTLING=0.9  # 请求间隔系数

# 缓存配置
CACHE_ENABLED=false
CACHE_TTL_OFFERS=3600
CACHE_TTL_BROWSE_NODE=3600
CACHE_TTL_DEFAULT=86400 