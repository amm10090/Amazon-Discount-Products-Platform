# Amazon PA-API 凭证
AMAZON_ACCESS_KEY=your_access_key_here
AMAZON_SECRET_KEY=your_secret_key_here
AMAZON_PARTNER_TAG=your_partner_tag_here

# API 配置
API_HOST=0.0.0.0
API_PORT=8000
DEBUG_MODE=True

# 爬虫配置
MAX_ITEMS=500
CRAWLER_TIMEOUT=30
HEADLESS_MODE=True

# 爬虫输出格式
CRAWLER_OUTPUT_FORMAT="json"

# 输出目录配置
CRAWLER_RESULTS_DIR="crawler_results"
PRODUCT_RESULTS_DIR="product_results"

# 可选：代理设置
# HTTP_PROXY="http://your-proxy:port"
# HTTPS_PROXY="http://your-proxy:port"

# 可选：API限流设置
# API_RATE_LIMIT=1  # 每秒请求数
# API_THROTTLING=0.9  # 请求间隔系数 